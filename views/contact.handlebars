{{>header}}
<div class="container">
    <div class="row">
        <div class="col-10 writeUpBox" id="contactFormBox">
            <p id="contactFormHeader">
                Use the following forms to send me an email
            </p>
            <form action="mailto:zachselindh@gmail.com" method="post" enctype="text/plain">
                <div class="container">
                    <div class="form-group col lg-1">
                        <label for="formGroupExampleInput">Email address</label>
                        <input type="text" class="form-control" id="formGroupExampleInput" placeholder="your@email">
                    </div>
                    <div class="form-group col lg-1">
                        <label for="formGroupExampleInput2">Subject</label>
                        <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Subject">
                    </div>
                    <div class="form-group col lg-1">
                        <label for="exampleFormControlTextarea1">Email body</label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="7"></textarea>
                    </div>
                    <input class="btn btn-secondary" id="emailSubmitButton" type="submit" value="Send">
            </form>
        </div>
    </div>
</div>
{{>footer}}