<!doctype HTML>
<html>

<head>
    <!-- Bootstrap CDN -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
        integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <!-- Native CSS -->
    <style>
        @font-face {
            font-family: "oswald";
            src: url("../fonts/Oswald-Light.ttf");
        }

        * {
            font-family: "oswald" !important;
            box-sizing: border-box;
        }

        body {
            background: url("../images/coffeeshop.jpg") no-repeat center center fixed;
            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover;
        }

        nav {
            background-color: white;
            border-bottom: 2px solid black;
            font-size: 2em;
        }

        .navbar-brand {
            margin-left: 1.75em;
            font-size: 1.2em;
        }

        .nav-icon-z {
            font-size: 0.6em;
            color: black;
            text-align: center;
        }

        .nav-icon-z:hover {
            cursor: pointer;
            transform: scale(1.15);
            transition-duration: 0.3s;
            color: black;
            text-decoration: underline;
        }

        .writeUpBox {
            background-color: rgba(255, 255, 255, 0.8);
            border: 3px solid black;
            border-radius: 0.5em;
            padding: 0.75em;
            margin: auto;
            margin-bottom: 6em;
        }

        .portfolio-item {
            margin: 0.25em;
            padding-bottom: 2em;
            margin-bottom: 3em;
            border-bottom: 3px solid black;
        }

        .portfolio-button {
            border: 3px solid black;
            border-radius: 3px;
        }

        .portfolio-button:hover {
            cursor: pointer;
            box-shadow: 3px 3px 3px grey;
            transform: scale(1.05);
            transition-duration: 0.3s;
        }

        .portfolio-title {
            text-decoration: underline;
        }

        .portfolio-body {
            font-size: 1.3em;
        }

        .tech-row,
        .link-row {
            margin-top: 1em;
            text-align: center;
            padding: 0.25em;
        }

        .tech-icon {
            margin-left: 0.5em;
            height: 3em;
            width: 3em;
        }

        .tech-link:hover {
            cursor: pointer;
            transform: scale(1.2);
            transition-duration: 0.3s;
        }

        .tech-title {
            font-size: 1.3em;
            text-decoration: underline;
        }

        .bodyLink {
            text-decoration: none;
            color: black;
        }

        .bodyLink:hover {
            color: black;
        }

        #indexWriteUp {
            margin-top: 8em;
            font-size: 1.5em;
        }

        #contactFormHeader {
            font-size: 1.3em;
        }

        #contactFormBox {
            margin-top: 3em;
            font-size: 1em;
        }

        #navBarZ {
            border-top: 1px solid black;
        }

        form {
            width: 80%;
            margin: auto;
        }

        #emailSubmitButton {
            color: black;
            float: right;
        }

        #portfolioBox {
            margin-top: 3em;
            text-align: center;
        }

        #aboutBox {
            margin-top: 3em;
        }

        #aboutTitle {
            padding: 0.25em;
            border-bottom: 1px solid black;
        }

        #aboutBody {
            font-size: 1.5em;
            padding: 0.25em;
        }

        .btn {
            border: 3px solid black;
            margin: 1em;
        }

        #navbar-title {
            text-align: left;
        }

        #navbar-title {
            color: black;
            font-size: 1.5em;
        }

        #navbar-title:hover {
            cursor: pointer;
            text-decoration: underline;
        }

        #navbrand-subtext {
            text-align: left;
            font-size: 0.75em;
        }

        .z-button:hover {
            cursor: pointer;
            box-shadow: 5px 5px 5px grey;
            transform: scale(1.15);
            transition-duration: 0.3s;
        }

        #textblock {
            text-align: center;
            color: black;
            box-sizing: border-box;
            position: relative;
            background-color: lightgrey;
            width: 100%;
            border: 3px solid black;
        }

        #nav-icon-row-z {
            text-align: right;
        }
    </style>

    <title> Zach Selindh </title>
</head>

